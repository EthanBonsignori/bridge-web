{
  "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "target": "es6",
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "baseUrl": ".",
      "pretty": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
  },
  "include": ["src/**/*", "tests/**/*", "ormconfig.js"],
  "exclude": [
      "node_modules",
      "local-data",
      "logs",
      ".vscode"
  ]
}